<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myoworkoutmonitor.android.workoutmonitor.MainActivity"
    tools:ignore="MergeRootFrame">


    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal|bottom">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/start_recording"
        android:layout_gravity="center_horizontal|bottom" />
<!--
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Exercise"
        android:id="@+id/start_exercise" />
-->
    </LinearLayout>

    <TextView
        android:id="@+id/rep_text"
        android:text="@string/rep_text"
        android:textSize="25dp"
        android:textColor="@color/myosdk__button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="SpUsage"/>

    <TextView
        android:id="@+id/angle_text"
        android:text="@string/angle_text"
        android:textSize="15dp"
        android:textColor="#333"
        android:layout_width="184dp"
        android:layout_height="249dp"
        android:layout_gravity="center_horizontal|bottom"
        tools:ignore="SpUsage"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:singleLine="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/gauge" />


</FrameLayout>
